.sidebar.animated.fadeInDown
  .logo-title
    .title
      img(src= url_for('images/logo@2x.png'),style="width:127px;")
      h3(title="")
        a(href="/")= config.title
      if config.description
        .description
          p= config.description

  ul.social-links
    if config.twitter
      li
        a(href="https://twitter.com/" + config.twitter)
          i.fa.fa-twitter
    if config.instagram
      li
        a(href="http://instagram.com/" + config.instagram)
          i.fa.fa-instagram
    if config.rss
      li
        a(href= url_for(config.rss))
          i.fa.fa-rss
    if config.email
      li
        a(href="mailto:737shirley@gmail.com")
          i.fa.fa-envelope
    if config.facebook
      li
        a(href="http://facebook.com/" + config.facebook)
          i.fa.fa-facebook
    if config.github
      li
        a(href="http://github.com/" + config.github)
          i.fa.fa-github
  include footer
